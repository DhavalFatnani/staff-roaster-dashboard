/**
 * schema.cursor
 * 
 * Purpose: TypeScript type definitions and data models for the Staff Roster Dashboard
 * 
 * Run notes:
 * - This file defines all TypeScript interfaces and types used throughout the application
 * - Import these types in components, API routes, and validators
 * - Types are designed to be database-agnostic but compatible with SQL/NoSQL schemas
 */

// ============================================================================
// Core Enums
// ============================================================================

export enum UserRole {
  STORE_MANAGER = 'STORE_MANAGER',
  SHIFT_IN_CHARGE = 'SHIFT_IN_CHARGE',
  INVENTORY_EXECUTIVE = 'INVENTORY_EXECUTIVE',
  PICKER_PACKER = 'PICKER_PACKER',
  SYSTEM_ADMIN = 'SYSTEM_ADMIN'
}

export enum ExperienceLevel {
  EXPERIENCED = 'experienced',
  FRESHER = 'fresher'
}

export enum PPType {
  WAREHOUSE = 'warehouse',
  AD_HOC = 'adHoc'
}

export enum ShiftType {
  MORNING = 'morning',
  EVENING = 'evening'
}

export enum Permission {
  // User & Role Management
  CRUD_USER = 'CRUD_USER',
  CRUD_ROLE = 'CRUD_ROLE',
  VIEW_ALL_STAFF = 'VIEW_ALL_STAFF',
  VIEW_OWN_STAFF = 'VIEW_OWN_STAFF',
  
  // Roster Management
  ASSIGN_SHIFT = 'ASSIGN_SHIFT',
  CREATE_ROSTER = 'CREATE_ROSTER',
  MODIFY_ROSTER = 'MODIFY_ROSTER',
  PUBLISH_ROSTER = 'PUBLISH_ROSTER',
  DELETE_ROSTER = 'DELETE_ROSTER',
  VIEW_ROSTER = 'VIEW_ROSTER',
  
  // Task Management
  ASSIGN_TASK = 'ASSIGN_TASK',
  MODIFY_TASK = 'MODIFY_TASK',
  
  // Settings & Configuration
  MANAGE_SETTINGS = 'MANAGE_SETTINGS',
  MANAGE_SHIFT_DEFINITIONS = 'MANAGE_SHIFT_DEFINITIONS',
  MANAGE_ROSTER_TEMPLATES = 'MANAGE_ROSTER_TEMPLATES',
  
  // Export & Share
  EXPORT_ROSTER = 'EXPORT_ROSTER',
  SHARE_ROSTER = 'SHARE_ROSTER',
  
  // Audit & Reports
  VIEW_AUDIT_LOG = 'VIEW_AUDIT_LOG',
  VIEW_REPORTS = 'VIEW_REPORTS',
  
  // Special Permissions
  DELETE_SM_USER = 'DELETE_SM_USER',
  DEMOTE_SM_USER = 'DEMOTE_SM_USER',
  MANAGE_AD_HOC_PP = 'MANAGE_AD_HOC_PP'
}

export enum AuditAction {
  CREATE = 'CREATE',
  UPDATE = 'UPDATE',
  DELETE = 'DELETE',
  PUBLISH = 'PUBLISH',
  EXPORT = 'EXPORT',
  SHARE = 'SHARE',
  LOGIN = 'LOGIN',
  LOGOUT = 'LOGOUT',
  PERMISSION_CHANGE = 'PERMISSION_CHANGE',
  ROLE_ASSIGN = 'ROLE_ASSIGN',
  ROLE_REVOKE = 'ROLE_REVOKE'
}

// ============================================================================
// User & Role Models
// ============================================================================

export interface Role {
  id: string;
  name: string;
  description?: string;
  permissions: Permission[];
  defaultTaskPreferences?: string[];
  defaultExperienceLevel?: ExperienceLevel;
  defaultPPType?: PPType;
  isEditable: boolean;
  isSystemRole: boolean; // System roles cannot be deleted
  createdAt: Date;
  createdBy: string;
  updatedAt: Date;
  updatedBy?: string;
}

export interface User {
  id: string;
  employeeId: string; // Unique employee identifier
  firstName: string;
  lastName: string;
  email: string;
  phone?: string;
  roleId: string; // Reference to Role.id
  role?: Role; // Populated on fetch
  storeId: string;
  experienceLevel: ExperienceLevel;
  ppType?: PPType; // Only for PICKER_PACKER role
  weekOffsCount: number; // Number of days off per week (0-7), rotational
  defaultShiftPreference?: ShiftType;
  isActive: boolean;
  passwordHash?: string; // For authentication
  lastLoginAt?: Date;
  
  // Metadata
  createdAt: Date;
  createdBy: string;
  updatedAt: Date;
  updatedBy?: string;
  
  // Soft delete
  deletedAt?: Date;
  deletedBy?: string;
  deletionReason?: string;
}

export interface PermissionMatrix {
  roleId: string;
  roleName: string;
  permissions: Record<Permission, boolean>;
}

// ============================================================================
// Roster Models
// ============================================================================

export interface ShiftDefinition {
  id: string;
  storeId: string;
  shiftType: ShiftType;
  startTime: string; // HH:mm format
  endTime: string; // HH:mm format
  durationHours: number; // Should be 9 for this app
  isActive: boolean;
  createdAt: Date;
  updatedAt: Date;
}

export interface Task {
  id: string;
  name: string;
  description?: string;
  category: string; // e.g., 'picking', 'packing', 'inventory', 'customer-service'
  requiredExperience?: ExperienceLevel;
  estimatedDuration?: number; // minutes
  isActive: boolean;
}

export interface RosterSlot {
  id: string;
  rosterId: string;
  userId: string;
  user?: User; // Populated on fetch
  shiftType: ShiftType;
  date: string; // YYYY-MM-DD
  assignedTasks: string[]; // Task IDs
  startTime: string;
  endTime: string;
  status: 'draft' | 'published' | 'cancelled';
  notes?: string;
}

export interface Roster {
  id: string;
  storeId: string;
  date: string; // YYYY-MM-DD
  shiftType: ShiftType;
  slots: RosterSlot[];
  coverage: CoverageMetrics;
  status: 'draft' | 'published' | 'archived';
  publishedAt?: Date;
  publishedBy?: string;
  createdAt: Date;
  createdBy: string;
  updatedAt: Date;
  updatedBy?: string;
  templateId?: string; // Reference to RosterTemplate
}

export interface CoverageMetrics {
  totalSlots: number;
  filledSlots: number;
  vacantSlots: number;
  coveragePercentage: number;
  minRequiredStaff: number;
  actualStaff: number;
  warnings: string[];
}

export interface RosterTemplate {
  id: string;
  storeId: string;
  name: string;
  description?: string;
  shiftType: ShiftType;
  defaultSlots: Omit<RosterSlot, 'id' | 'rosterId' | 'date' | 'status'>[];
  isActive: boolean;
  createdAt: Date;
  createdBy: string;
  updatedAt: Date;
}

// ============================================================================
// Store & Settings Models
// ============================================================================

export interface Store {
  id: string;
  name: string;
  address?: string;
  phone?: string;
  email?: string;
  timezone: string; // e.g., 'Asia/Kolkata'
  settings: StoreSettings;
  createdAt: Date;
  updatedAt: Date;
}

export interface StoreSettings {
  minStaffPerShift: number;
  maxStaffPerShift: number;
  requireCoverageValidation: boolean;
  allowOverlap: boolean;
  defaultShiftDuration: number; // hours
  weekStartDay: number; // 0=Sunday, 1=Monday
  enableAuditLog: boolean;
  enableEmailNotifications: boolean;
  enableSlackNotifications: boolean;
  slackWebhookUrl?: string;
  emailFromAddress?: string;
  
  // Permission overrides (can customize SI permissions)
  siPermissions: Permission[];
  siCanDeleteStaff: boolean;
  siCanModifySM: boolean; // Should be false by default
  siCanPublishRoster: boolean;
}

// ============================================================================
// Audit & Activity Models
// ============================================================================

export interface AuditLog {
  id: string;
  storeId: string;
  userId: string;
  user?: User; // Populated on fetch
  action: AuditAction;
  entityType: 'user' | 'role' | 'roster' | 'shift' | 'task' | 'settings' | 'template';
  entityId: string;
  entityName?: string; // Human-readable name
  changes?: Record<string, { old: any; new: any }>; // For UPDATE actions
  metadata?: Record<string, any>; // Additional context
  ipAddress?: string;
  userAgent?: string;
  timestamp: Date;
}

// ============================================================================
// Export & Share Models
// ============================================================================

export interface ExportOptions {
  format: 'csv' | 'pdf';
  dateRange: {
    start: string; // YYYY-MM-DD
    end: string; // YYYY-MM-DD
  };
  includeMetadata: boolean;
  includeTasks: boolean;
  includeContactInfo: boolean;
}

export interface ShareOptions {
  method: 'email' | 'slack';
  recipients: string[]; // Email addresses or Slack user IDs
  message?: string;
  includePdf: boolean;
  rosterIds: string[];
}

// ============================================================================
// Validation & Permission Models
// ============================================================================

export interface ValidationResult {
  valid: boolean;
  errors: ValidationError[];
  warnings?: string[];
}

export interface ValidationError {
  field: string;
  message: string;
  code: string;
}

export interface PermissionCheckResult {
  allowed: boolean;
  reason?: string;
  requiredPermission?: Permission;
}

export interface DeleteUserResult {
  allowed: boolean;
  reason?: string;
  impactedRosters: Array<{
    rosterId: string;
    date: string;
    shiftType: ShiftType;
    slotId: string;
  }>;
  canReassign: boolean;
}

export interface BulkActionPreview {
  affectedUsers: number;
  affectedRosters: number;
  changes: Array<{
    userId: string;
    userName: string;
    currentRole: string;
    newRole?: string;
    currentPermissions: Permission[];
    newPermissions?: Permission[];
  }>;
}

// ============================================================================
// API Request/Response Types
// ============================================================================

export interface CreateUserRequest {
  employeeId: string;
  firstName: string;
  lastName: string;
  email: string;
  phone?: string;
  roleId: string;
  experienceLevel: ExperienceLevel;
  ppType?: PPType;
  weekOffsCount: number; // Number of days off per week (0-7), rotational
  defaultShiftPreference?: ShiftType;
  sendInvite?: boolean;
}

export interface UpdateUserRequest {
  firstName?: string;
  lastName?: string;
  email?: string;
  phone?: string;
  roleId?: string;
  experienceLevel?: ExperienceLevel;
  ppType?: PPType;
  weekOffsCount?: number; // Number of days off per week (0-7), rotational
  defaultShiftPreference?: ShiftType;
  isActive?: boolean;
}

export interface CreateRoleRequest {
  name: string;
  description?: string;
  permissions: Permission[];
  defaultTaskPreferences?: string[];
  defaultExperienceLevel?: ExperienceLevel;
  defaultPPType?: PPType;
}

export interface UpdateRoleRequest {
  name?: string;
  description?: string;
  permissions?: Permission[];
  defaultTaskPreferences?: string[];
  defaultExperienceLevel?: ExperienceLevel;
  defaultPPType?: PPType;
  isEditable?: boolean;
}

export interface BulkImportUserRequest {
  users: Omit<CreateUserRequest, 'sendInvite'>[];
  skipDuplicates?: boolean;
  defaultRoleId?: string;
}

export interface ReassignRosterSlotsRequest {
  fromUserId: string;
  toUserId?: string; // If null, mark as vacant
  rosterIds?: string[]; // If empty, reassign all future rosters
  confirmVacancy?: boolean;
}

// ============================================================================
// Utility Types
// ============================================================================

export type DayOfWeek = 0 | 1 | 2 | 3 | 4 | 5 | 6; // Sunday = 0

export interface DateRange {
  start: Date;
  end: Date;
}

export interface PaginatedResponse<T> {
  data: T[];
  pagination: {
    page: number;
    pageSize: number;
    total: number;
    totalPages: number;
  };
}

export interface ApiResponse<T> {
  success: boolean;
  data?: T;
  error?: {
    code: string;
    message: string;
    details?: any;
  };
}
